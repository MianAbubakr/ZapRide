        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ZapRide" >
        <activity
            android:name="com.smlab.zapride.ui.contactUs.ContactUs"
            android:exported="true" />
        <activity
            android:name="com.smlab.zapride.ui.aboutUs.AboutUs"
            android:exported="true" />
        <activity
            android:name="com.smlab.zapride.ui.settings.Settings"
            android:exported="true" />
