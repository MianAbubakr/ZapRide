<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ZapRide" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ZapRide" parent="Base.Theme.ZapRide" />
    <style name="MenuTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/btnColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- Adjust the dim amount -->
    </style>
</resources>